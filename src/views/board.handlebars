<div class="row">
    <div class="col-md-5" id="boardname">
        <a href="/">Boards</a> >
       <h1>{{Name}}</h1>
    </div>
    <div class="col-md-3">
        <br/><br/>
        <button type="button" class="btn btn-primary pull-right">Add Thread</button>
    </div>
</div>

{{#each threads}}
<div class="row">
    <div class="col-md-4 col-md-offset-1 media">
        <div class="media-left">
            <img src="http://placehold.it/75x75">
        </div>
        
        <div class="media-body board">
            <h2 class="media-heading"><a href="/thread/{{ID}}">{{Title}}</a></h2>
            <P>Last post: Placeholder o-clock</P>

        </div>
    </div>
    <div class="col-md-3">
        <div class=" pull-right" style="border: none">
            <span class="num">1</span> 
            post<br>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-1">
        <hr style="style2">
    </div>
</div>
{{/each}}

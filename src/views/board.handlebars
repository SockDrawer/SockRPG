<div class="row">
    <div class="col-md-5" id="boardname" data-board-id="{{ID}}">
        <a href="/">Boards</a> >
       <h1>{{Name}}</h1>
    </div>
    <div class="col-md-3">
        <br/><br/>
        <button type="button" class="btn btn-primary pull-right" id="addThread" >Add Thread</button>
    </div>
</div>

{{#each threads}}
<div class="row">
    <div class="col-md-4 col-md-offset-1 media">
        <div class="media-left">
            <img src="http://placehold.it/75x75">
        </div>
        
        <div class="media-body board">
            <h2 class="media-heading"><a href="/thread/{{ID}}">{{Title}}</a></h2>
            <P>Last post: {{Stats.LastPostTime}} by <a href="/profile/{{Stats.LastPosterId}}">{{Stats.LastPoster}}</a></P>

        </div>
    </div>
    <div class="col-md-3">
        <div class=" pull-right" style="border: none">
            <span class="num">{{Stats.PostCount}}</span> 
            posts<br>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-1">
        <hr style="style2">
    </div>
</div>
{{/each}}


<script type="handlebars" id="threadModal">
<div class="modal-header">
	<h3>Add a Thread</h3>
</div>
<div class="modal-body">
	<form>
	<div class="alert alert-danger" role="alert" hidden="true"></div>
	<div class="alert alert-success" role="alert" hidden="true"></div>
	<div class="form-group">
		<label for="Title">Title:</label><input type="text" class="form-control" name="Title" value="{{Title}}"><br/>
		<input type="submit" class="form-control" id="submitModal">
	</div>
	</form>
</div>
</script>
<script src="/static/js/threads.js"></script>
<script src="/static/js/newThread.js"></script>

<div class="modal fade" id="tModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

    </div>
  </div>
</div>
    "wdio-selenium-standalone-service": "0.0.10",
    "webdriverio": "^4.13.0"
  },
  "scripts": {
    "start": "node ./src/server.js",
    "lint": "eslint .",
    "preunitTests": "npm run lint",
    "unitTests": "istanbul cover node_modules/mocha/bin/_mocha -- --exit --recursive -R dot ./test/unit/**/*.js",
    "integrationTests": "mocha --exit --recursive -R dot ./test/integration/*.js",
    "pretest": "npm run unitTests",
    "test": "npm run integrationTests",
    "systemTest": "wdio wdio.conf.js",
    "mocha": "mocha --exit --recursive -R dot ./test/unit/**/*.js",
    "commit": "git-cz",
    "postmocha": "npm run integrationTests",
    "prepush": "npm test",
    "postmerge": "npm install",
    "postrewrite": "npm install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

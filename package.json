    "pg-hstore": "^2.3.2",
    "sqlite3": "^4.0.1"
  },
  "devDependencies": {
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "coveralls": "^3.0.1",
    "cz-conventional-changelog": "^1.1.7",
    "eslint": "^5.0.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.0",
    "mocha": "^5.2.0",
    "sinon": "^1.17.1",

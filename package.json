    "email": "support@sockdrawer.io"
  },
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.14.1",
    "debug": "^2.6.9",
    "express": "^4.13.3",
    "express-handlebars": "^3.0.0",
    "knex": "^0.14.6",
